  <script>
    let selectedAccountId = null;

    const appearFormUpdate = (id, provider, accountNumber) => {
        selectedAccountId = id; // Lưu ID tài khoản thanh toán cần cập nhật
        // Hiển thị form và điền các giá trị vào các trường của form
        $('#updateForm #provider').val(provider);
        $('#updateForm #accountNumber').val(accountNumber);
        $('#updateForm').toggle();
    }

    const update = () => {
    const provider = $('#updateForm #provider').val();
    const accountNumber = $('#updateForm #accountNumber').val();

    $.ajax({
        url: `/api/payment/update/${selectedAccountId}`,
        type: 'PUT',
        data: {
            provider,
            accountNumber
        },
        success: (response) => {
            alert(response.message);
            location.reload();
        },
        error: (error) => {
            console.error(error);
            alert("Có lỗi xảy ra khi cập nhật tài khoản.");
        }
      })
    }

    const Delete = (id) => {
      $.ajax({
        url: `/api/payment/delete/${id}`,
        type: 'DELETE',
        success: (response) => {
          alert(response.message);
          location.reload();
        }
      })
    }
  </script>
