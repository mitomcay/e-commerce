<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Sign In</title>
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/img/favicon.png">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80');
      background-size: cover;
      background-position: center;
      position: relative;
    }
    body::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba(0, 0, 0, 0.6);
      z-index: -1;
    }
    .login-container {
      max-width: 400px;
      margin: 50px auto;
      padding: 30px;
      background: white;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0,0,0,0.2);
    }
    .password-toggle {
      cursor: pointer;
      position: absolute;
      right: 10px;
      top: 10px;
      background: transparent;
      border: none;
    }
    .form-control {
      padding: 10px 15px;
    }
    .footer {
      color: white;
      text-align: center;
      width: 100%;
      padding: 20px;
    }
  </style>
</head>

<body>
  <div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <a href="/" class="btn btn-outline-light">
        <i class="fas fa-home me-2"></i>Home
      </a>
      <a href="/register" class="btn btn-outline-light">
        <i class="fas fa-user-plus me-2"></i>Sign Up
      </a>
    </div>

    <div class="login-container">
      <h2 class="text-center mb-4">Sign In</h2>
      
      <div class="text-center mb-4">
        <a href="javascript:;" class="btn btn-outline-dark me-2">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="javascript:;" class="btn btn-outline-dark me-2">
          <i class="fab fa-github"></i>
        </a>
        <a href="javascript:;" class="btn btn-outline-dark">
          <i class="fab fa-google"></i>
        </a>
      </div>

      <% if(errorMessage) { %>
        <div class="alert alert-danger text-center mb-4">
          <%= errorMessage %><br>
          <small>Please contact Admin at 0123456789 for help</small>
        </div>
      <% } %>

      <form action="/login" method="post">
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" name="email" class="form-control" value="<%= email %>" placeholder="Enter your email" required>
        </div>

        <div class="mb-3 position-relative">
          <label class="form-label">Password</label>
          <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" required>
          <button type="button" class="password-toggle" id="togglePassword">
            <i class="fas fa-eye"></i>
          </button>
        </div>

        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="rememberMe" checked>
          <label class="form-check-label" for="rememberMe">Remember me</label>
        </div>

        <button type="submit" class="btn btn-dark w-100 py-2 mb-3" id="btn-login">
          Sign In
        </button>

        <div class="text-center">
          Don't have an account? <a href="/register" class="text-decoration-none">Sign up</a>
        </div>
      </form>
    </div>
  </div>

  <footer class="footer">
    <%- include('./../pages/partial/footer.ejs') %>
  </footer>

  <!-- jQuery and Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    $(document).ready(function() {
      // Password toggle
      $('#togglePassword').click(function() {
        const password = $('#password');
        const icon = $(this).find('i');
        const type = password.attr('type') === 'password' ? 'text' : 'password';
        password.attr('type', type);
        icon.toggleClass('fa-eye fa-eye-slash');
      });
    });
  </script>
</body>
</html>